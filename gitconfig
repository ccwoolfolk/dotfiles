[user]
	name = Casey Woolfolk
	email = ccwoolfolk@gmail.com
[core]
	editor = /usr/local/bin/vim
[init]
  defaultBranch = main
[alias]
	mb = branch --show-current
	first-push = ! git push -u origin $(git mb)
	l = log --oneline --graph
	a = add -p
	st = status
	fixup = commit --amend --no-edit
[push]
	default = simple
[pull]
	ff = only
[rerere]
	enabled = true
